{
  "name": "@airwise/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Svelte 5 front-end for the AirWise airline loyalty ROI calculator.",
  "scripts": {
    "dev": "svelte-kit dev --host",
    "build": "svelte-kit sync && svelte-kit build",
    "preview": "svelte-kit preview --host",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint --max-warnings=0 \"src/**/*.{ts,svelte}\"",
    "test": "vitest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sveltejs/kit": "^2.6.5",
    "@tanstack/svelte-query": "^5.59.7",
    "clsx": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@tailwindcss/forms": "^0.5.7",
    "@opentelemetry/api": "^1.8.0",
    "@types/node": "^20.12.7",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vitest": "^1.5.2"
  }
}
